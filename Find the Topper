#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct marks{
    int math;
    int science;
    int english;
    int computer;
    
};
struct student{
    int rollno;
    char name[50];
    struct marks total;
};


int main() {
    int n;
    scanf("%d",&n);
    int max=0;
    int index=0;
    struct student s[n];
    for(int i=0;i<n;i++){
        scanf("%d",&s[i].rollno);
        scanf(" %[^\n]",s[i].name);
        scanf("%d %d %d %d",&s[i].total.math,&s[i].total.science,&s[i].total.english,&s[i].total.computer);
        int sum=s[i].total.math+s[i].total.science+s[i].total.english+s[i].total.computer;
        
        
    
        if(sum>=max){
            max=sum;
            index=i;
        }
    }
    printf("Topper Details:\n");
    printf("Roll No: %d\n",s[index].rollno);
    printf("Name: %s\n",s[index].name);
    printf("Total Marks: %d",max);
    
    

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
