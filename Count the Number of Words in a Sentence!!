#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include<ctype.h>
int main() {
    char s[1000];
    scanf("%[^\n]",s);
    int count=0;
    for(int i=0;i<=strlen(s)-1;i++){
        if(isalpha(s[i])&& (i==0||!isalpha(s[i-1]))){
           count++;
        }
    }
    printf("%d",count);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
