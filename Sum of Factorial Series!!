#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int fact(int n){
    int k=1;
    for(int i=1;i<=n;i++){
        k=k*i;
    }
    return k;
}
int main() {
    int n,sum=0;
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
        sum+=fact(i);
    }
    printf("%d",sum);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
